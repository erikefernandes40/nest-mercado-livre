generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  email    String @unique
  password String

  name String
}

model Order {
  id Int @id @default(autoincrement())

  //user_id User @relation(fields: [], references: [id])

  product_id Int
}

model Product {
  id Int @id @default(autoincrement())

  title String

  price Float

  available_quanttity Int
}

model Category {
  id Int @id @default(autoincrement())

  name String
}
